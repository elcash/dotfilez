# main color settings
color attachment        brightmagenta   default
color error             brightwhite     red     # errors
color indicator         brightgreen     black   # currently selected message
color markers           brightgreen     default # the + for wrapped pager lines
color message           brightred       default # informational messages, *not mail*
color normal            default         default # plain text
color quoted            green           default # quoted text
color search            brightgreen     default # hilite search patterns in the pager
color status            brightyellow    blue    # status bar
color tilde             brightgreen     default # ~'s after message body
color quoted		green		default # quoted text
color quoted1    	red      	default
color quoted2    	brightgreen     default
color quoted3    	brightcyan      default
color quoted4    	cyan           	default
color quoted5    	blue           	default
color quoted6    	magenta        	default
color quoted7    	red            	default
color quoted8		white          	default
color quoted9		brightred      	default
color bold		default		white                  # hiliting bold patterns in body
color underline		default		white                  # hiliting underlined patterns in body
color signature		cyan		default                # signature
color tree		brightmagenta	default                # thread arrows
color header            white           default ^(Date|To|CC): # Headers
color header            red		white ^(From|Subject): # Important headers

# message body
color body       yellow     default    "^ +.*> "
color body       yellow     default    "(:|;)(-|^)*(\\)|\\()"
color body       red        default    "(-|=)(-|=)+"
color body       red        default    "\\|"
color body       black      white  "^[ A-Z,\\.?'\!]{6,}" # don't mind the screaming
color body       yellow     default    "^[0-9]*\\."
color body       yellow     default    "(\\[|\\])"
color body       red        default "(ftp|http)://[^ ]+"  # picks up URLs in body of message. 
color body       red        default  [-a-z_0-9.]+@[-a-z_0-9.]+ # picks up email addresses

# index
color index      green      default    	~N      # New
color index      default    white      	~T      # Tagged
color index      white      brightred  	~D      # Deleted

# b/w terms
mono normal             bold
mono header             underline ^(From|Subject):
mono body               bold ".*"
mono quoted             bold
mono error              bold
mono indicator          none # actual msg
mono status             none # status line
mono message            bold # info msgs
mono search             bold
mono bold               bold
mono hdrdefault         bold
mono signature          bold
mono underline          underline
mono markers            bold
mono attachment         underline
